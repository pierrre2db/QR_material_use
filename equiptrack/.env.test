# Configuration de l'application Flask
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dev_change_this_in_production

# Configuration de la base de données SQLite
SQLALCHEMY_DATABASE_URI=sqlite:///data/equiptrack.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Configuration du serveur
HOST=0.0.0.0
PORT=5001

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=logs/equiptrack.log

# Configuration de l'application
APP_NAME=EquipTrack
APP_DESCRIPTION="Application de suivi des équipements éducatifs"

# Configuration du mode maintenance
MAINTENANCE_MODE=false

# Configuration de la sécurité
SESSION_COOKIE_SECURE=false
REMEMBER_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
REMEMBER_COOKIE_HTTPONLY=true
